#include <stdio.h>


void main()
{
    
    int n,i,position,value;
    int a[50];
    printf("Enter the size of array:\n");
    scanf("%d",&n);
    printf("Enter elements of array:\n");
    for(i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
        
    }
    printf("Enter which position array to be deleted:\n");
    scanf("%d",&position);

    for(i=position-1;i<=n-1;i++)
    {
        a[i]=a[i+1];
    }
    
    printf("resultant array is:\n");
    for(i=0;i<n-1;i++)
    printf("%d",a[i]);
    
}
